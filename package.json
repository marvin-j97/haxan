{
  "name": "haxan",
  "version": "0.0.1-nightly.1",
  "description": "Intuitive HTTP client for browsers and servers",
  "main": "dist/haxan.min.js",
  "typings": "build/index.d.ts",
  "files": [
    "dist/haxan.min.js",
    "typings"
  ],
  "scripts": {
    "coverage": "nyc npm test",
    "postcoverage": "nyc report --reporter=json",
    "doc": "typedoc --out docs src",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "test": "ava test/**/*.spec.ts",
    "transpile": "tsc -p build.tsconfig.json",
    "build:umd": "rollup --config",
    "babel": "babel dist/haxan.js -o dist/haxan.es5.js",
    "build": "npm run transpile && npm run build:umd && npm run babel && npm run minify",
    "minify": "uglifyjs dist/haxan.es5.js --compress --mangle > dist/haxan.min.js",
    "prebuild": "rm -rf dist && rm -rf build",
    "postbuild": "rm -rf build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotvirus/haxan.git"
  },
  "keywords": [
    "http",
    "ajax",
    "node",
    "browser",
    "xhr",
    "promise",
    "fetch"
  ],
  "author": "dotvirus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dotvirus/haxan/issues"
  },
  "homepage": "https://github.com/dotvirus/haxan#readme",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "abort-controller": "^3.0.0",
    "ava": "^3.12.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "express": "^4.17.1",
    "nyc": "^15.1.0",
    "rollup": "^2.26.11",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2",
    "uglify-js": "^3.10.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  }
}
